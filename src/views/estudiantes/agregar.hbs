<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Agregar estudiante</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <form method="POST" action="/estudiantes/agregar">
                <div class="form-group">
                    <label for="idestudiante">ID del estudiante</label>
                    <input type="text" class="form-control" name="idestudiante" id="idestudiante"
                        placeholder="ID del estudiante" required />
                </div>
                <div class="form-group">
                    <label for="nombre">Nombre</label>
                    <input type="text" class="form-control" name="nombre" id="nombre"
                        placeholder="Nombre del estudiante" autofocus required />
                </div>
                <div class="form-group">
                    <label for="apellido">Apellido</label>
                    <input type="text" class="form-control" name="apellido" id="apellido"
                        placeholder="Apellido del estudiante" required />
                </div>
                <div class="form-group">
                    <label for="email">Correo</label>
                    <input type="email" class="form-control" name="email" id="email" 
                        placeholder="Correo del estudiante" required />
                </div>
                <div class="form-group">
                    <label for="idcarrera">Carrera</label>
                    <select class="form-control" name="idcarrera" id="idcarrera" required>
                        <option value="0">Seleccione una carrera</option>
                        {{#each carreras}}
                        <option value="{{this.idcarrera}}">
                            {{this.idcarrera}} - {{this.carrera}}
                        </option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="usuario">Usuario</label>
                    <input type="text" class="form-control" name="usuario" id="usuario"
                        placeholder="Usuario del estudiante" required />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-block">Guardar</button>
                </div>
            </form>
            {{#if mensaje}}
            <div class="alert alert-info mt-3">
                {{mensaje}}
            </div>
            {{/if}}
        </div>
    </div>
</div>