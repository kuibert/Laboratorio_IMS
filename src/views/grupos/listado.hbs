<div class="container p-4">
    {{#if flash.info}}
    <div class="alert alert-success">
        {{flash.info}}
    </div>
    {{/if}}
    {{#if flash.error}}
    <div class="alert alert-danger">
        {{flash.error}}
    </div>
    {{/if}}  
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-6">
                <h3>Listado de grupos</h3>
            </div>
            <div class="col-sm-6">
                <a href="/grupos/agregar" class="btn btn-success d-block text-white">Agregar grupo</a>
            </div>
        </div>
    </div>
    <div class="col-sm-12 mt-4">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Número de Grupo</th>
                    <th scope="col">Año</th>
                    <th scope="col">Ciclo</th>
                    <th scope="col">ID Materia</th>
                    <th scope="col">ID Profesor</th>
                    <th scope="col">Opciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each grupos}}
                <tr>
                    <th scope="row">{{idgrupo}}</th>
                    <td>{{num_grupo}}</td>
                    <td>{{anio}}</td>
                    <td>{{ciclo}}</td>
                    <td>{{idmateria}}</td>
                    <td>{{idprofesor}}</td>
                    <td>
                        <a href="/grupos/actualizar/{{idgrupo}}" class="btn btn-primary text-white">Modificar</a>
                        <a href="/grupos/eliminar/{{idgrupo}}" class="btn btn-danger text-white">Eliminar</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
