<div class="container p-4">
    {{#if flash.info}}
    <div class="alert alert-success">
        {{flash.info}}
    </div>
    {{/if}}
    {{#if flash.error}}
    <div class="alert alert-danger">
        {{flash.error}}
    </div>
    {{/if}}  
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-6">
                <h3>Listado de profesores</h3>
            </div>
            <div class="col-sm-6">
                <a href="/profesores/agregar" class="btn btn-success d-block text-white">Agregar profesor</a>
            </div>
        </div>
    </div>
    <div class="col-sm-12 mt-4">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Fecha de Nacimiento</th>
                    <th>Profesión</th>
                    <th>Género</th>
                    <th>Email</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each profesores}}
                <tr>
                    <th scope="row">{{idprofesor}}</th>
                    <td>{{nombre}}</td>
                    <td>{{apellido}}</td>
                    <td>{{formatearFecha fecha_nacimiento}}</td>
                    <td>{{profesion}}</td>
                    <td>{{genero}}</td>
                    <td>{{email}}</td>
                    <td>
                        <a href="/profesores/actualizar/{{idprofesor}}" class="btn btn-primary text-white">Modificar</a>
                        <a href="/profesores/eliminar/{{idprofesor}}" class="btn btn-danger text-white">Eliminar</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>